@model IEnumerable<EmployeeToReturnDto>

@{
	ViewData["Title"] = "Employees";
}

<h1>Employees </h1>

<br />

<br />


<a asp-controller="Employee" asp-action="Create" class="btn btn-primary"> Create New Employee </a>

<br />

@if (Model.Count() > 0)
{
	<table class=" mt-4 table table-striped table-hover">

		<thead>

			<tr>


				<th> @Html.DisplayNameFor(d => d.Name) </th>
				<th> @Html.DisplayNameFor(d => d.EmailAddress) </th>

				<th> @Html.DisplayNameFor(d => d.Age) </th>
				<th> @Html.DisplayNameFor(d => d.Salary) </th>
				<th> @Html.DisplayNameFor(d => d.IsActive) </th>
				<th> @Html.DisplayNameFor(d => d.Gender) </th>
				<th> @Html.DisplayNameFor(d => d.EmployeeType) </th>


				<th> Details </th>

				<th> Update </th>

				<th> Delete </th>


			</tr>

		</thead>

		<tbody class="text-center">

			

			@foreach (var item in Model)
			{
				<tr>
					<td>@Html.DisplayFor(x => @item.Name)</td>
					<td>@Html.DisplayFor(x => @item.EmailAddress)</td>
					<td>@Html.DisplayFor(x => @item.Age)</td>
					<td>@Html.DisplayFor(x => @item.Salary)</td>
					<td>@Html.DisplayFor(x => @item.IsActive)</td>
					<td>@Html.DisplayFor(x => @item.Gender)</td>
					<td>@Html.DisplayFor(x => @item.EmployeeType)</td>

					<td>
						<a asp-controller="Employee" asp-action="Details" asp-route-id="@item.Id" class="btn btn-warning">
							<i class="fas fa-eye"></i> Details
						</a>
					</td>

					<td>
						<a asp-controller="Employee" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success">
							<i class="fas fa-edit"></i> Update
						</a>
					</td>
					<td>
						<a type="button" class="btn btn-danger" data-bs-toggle="modal" asp-route-id="@item.Id" data-bs-target="#DeleteModal-@item.Id">
							<i class="fas fa-trash"></i> Delete
						</a>
					</td>

					<div class="modal fade" id="DeleteModal-@item.Id" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
						<div class="modal-dialog">
							<div class="modal-content">
								<div class="modal-header">
									<h1 class="modal-title fs-5" id="staticBackdropLabel">Delete Employee</h1>
									<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
								</div>


								<div class="modal-body">
									Are You Sure To Delete Employee: <strong>@item.Name</strong>
								</div>
								<div class="modal-footer">
									<form asp-action="Delete" asp-route-id="@item.Id" method="post">
										<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
										<button type="Submit" class="btn btn-danger">Delete</button>
									</form>
								</div>
							</div>
						</div>
					</div>
				</tr>

			}



		</tbody>
	</table>
}
else
{
	<div class="alert alert-info mt-3">

		<h3>There is No Employees :( </h3>

	</div>
}